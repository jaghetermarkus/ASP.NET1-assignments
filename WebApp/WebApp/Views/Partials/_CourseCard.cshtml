@model CourseEntity
@{
    var course = ViewData["Course"] as CourseEntity;
}

<div id="@Model.Id" class="course-card">
    <div class="image-box">
        <img src="~/images/@Model.CourseImageUrl" alt="@Model.Title">
        @* <i class="fa-solid fa-bookmark"></i> *@
        <i class="fa-regular fa-bookmark"></i>
        @if (Model.IsBestSeller)
        {
            <p class="best-seller">Best Seller</p>
        }
    </div>
    <div class="course-content">
        <h5 class="course-title">@Model.Title</h5>
        <p class="author">By @Model.Author</p>
        @if (Model.DiscountPrice != "0"){
            <p class="discount-price">$@Model.DiscountPrice <span>$@Model.OriginalPrice</span> </p>
        }
        else {
            <p class="price">$@Model.OriginalPrice</p>
        }
        <hr>
        <div class="course-stats">
            <p class="hours"><i class="fa-regular fa-clock"></i>@Model.Hours hours</p>
            <p class="rating"><i class="fa-light fa-thumbs-up"></i>@Model.LikesInProcent% (@Model.LikesInNumbers K)</p>
        </div>
    </div>
</div>