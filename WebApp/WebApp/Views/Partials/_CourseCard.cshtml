@{
    var course = ViewData["Course"] as CourseEntity;
}

<div id="@course.Id" class="course-card">
    <div class="image-box">
        <img src="@course.CourseImageUrl" alt="course image">
        @* <i class="fa-solid fa-bookmark"></i> *@
        <i class="fa-regular fa-bookmark"></i>
        @if (course.IsBestSeller)
        {
            <p class="best-seller">Best Seller</p>
        }
    </div>
    <div class="course-content">
        <h5 class="course-title">@course.Title</h5>
        <p class="author">By @course.Author</p>
        @if (course.DiscountPrice > 0){
            <p class="discount-price">$@course.DiscountPrice <span>$@course.OriginalPrice</span> </p>
        }
        else {
            <p class="price">$@course.OriginalPrice</p>
        }
        <hr>
        <div class="course-stats">
            <p class="hours"><i class="fa-regular fa-clock"></i>@course.Hours hours</p>
            <p class="rating"><i class="fa-light fa-thumbs-up"></i>@course.LikesInProcent% (@course.LikesInNumbers K)</p>
        </div>
    </div>
</div>