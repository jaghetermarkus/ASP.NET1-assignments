@model SignInViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<section class="signin">
    <div class="container-form-small">

        <form method="post" asp-controller="Auth" asp-action="SignIn" novalidate >

            <h1 class="form-title">Welcome Back</h1>
            <p>Donâ€™t have an account yet?  <a class="sign-in-here" asp-controller="Auth" asp-action="SignUp" >Sign up here</a> </p>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-error">
                    @ViewData["ErrorMessage"]
                </div>
            }
            @if (ViewData["SuccessMessage"] != null)
            {
            <div class="alert alert-success">
                @ViewData["SuccessMessage"]
            </div>
            }

            <div class="input-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="checkbox-group">
                <div class="input-group">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe">
                        Remember me
                    </label>
                </div>
                <span asp-validation-for="RememberMe"></span>
            </div>

            <button class="btn-theme sign-up-btn" type="submit" >Sign in</button>

        </form>
    </div>
</section>